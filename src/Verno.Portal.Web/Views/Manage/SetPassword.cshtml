@using System.Threading.Tasks
@model SetPasswordViewModel
@{
    ViewData["Title"] = "Новый пароль";
}

<div class="auth-main">
    <div class="auth-block">
        <p class="text-info">
            У Вас не задан пароль для входа на VernoPortal. Что бы продолжить
            работу с сайтом необходимо задать пароль.
        </p>

        <form asp-controller="Manage" asp-action="SetPassword" method="post" class="form-horizontal">
            <h4>Задайте свой пароль</h4>
            <hr />
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="form-group row">
                <label asp-for="NewPassword" class="col-sm-4 control-label"></label>
                <div class="col-sm-8">
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ConfirmPassword" class="col-sm-4 control-label"></label>
                <div class="col-sm-8">
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-offset-4 col-sm-8">
                    <button id="SubmitButton" type="submit" class="btn btn-default btn-auth">Задать пароль</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section styles{
    <link rel="stylesheet" href="~/assets/login.css" />
}
@section scripts {
    <script src="~/assets/libs/jquery/jquery.min.js" type="text/javascript"></script>
    <script src="~/assets/libs/sweetalert/sweetalert.min.js" type="text/javascript"></script>
    <script src="~/assets/libs/spin.js/spin.min.js" type="text/javascript"></script>
    <script src="~/assets/libs/spin.js/jquery.spin.js" type="text/javascript"></script>
    <script src="~/assets/libs/blockUI/jquery.blockUI.js" type="text/javascript"></script>
    <script src="~/assets/libs/abp-web-resources/Abp/Framework/scripts/abp.js" type="text/javascript"></script>
    <script src="~/assets/libs/abp-web-resources/Abp/Framework/scripts/libs/abp.jquery.js" type="text/javascript"></script>
    <script src="~/assets/libs/abp-web-resources/Abp/Framework/scripts/libs/abp.blockUI.js" type="text/javascript"></script>
    <script src="~/assets/scripts/abp.spin.js" type="text/javascript"></script>
    <script src="~/assets/scripts/abp.utils.js" type="text/javascript"></script>
    <script src="~/assets/libs/abp-web-resources/Abp/Framework/scripts/libs/abp.sweet-alert.js" type="text/javascript"></script>

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    @*<script src="~/assets/scripts/SetPassword.js"></script>*@
}
