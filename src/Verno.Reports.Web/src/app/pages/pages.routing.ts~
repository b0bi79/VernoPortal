import {RouterConfig} from '@angular/router';
import {Dashboard} from './dashboard/dashboard.component';
import {Pages} from './pages.component';
import { Admin } from './admin/admin.component';
import { Users } from './admin/components/users/users.component';
import { Documents } from './documents/documents.component';
import { PrintList } from './documents/print/components/list/print-list.component';
import { ReturnsList } from './documents/returns/components/list/returns-list.component';


//noinspection TypeScriptValidateTypes
export const PagesRoutes: RouterConfig = [
    {
        path: 'pages',
        component: Pages,
        children: [
            {
                path: 'dashboard',
                component: Dashboard,
                data: {
                    menu: {
                        title: 'Главная',
                        icon: 'ion-android-home',
                        selected: false,
                        expanded: false,
                        order: 0
                    }
                }
            },
            {
                path: 'documents',
                component: Documents,
                data: {
                    authorize: 'Documents',
                    menu: {
                        title: 'Документы',
                        icon: 'ion-document',
                        selected: false,
                        expanded: true,
                        order: 100,
                    }
                },
                children: [
                    {
                        path: 'print-list',
                        component: PrintList,
                        data: {
                            authorize: 'Documents.Print',
                            menu: {
                                title: 'Печатные формы',
                            }
                        }
                    },
                    {
                        path: 'returns-list',
                        component: ReturnsList,
                        data: {
                            authorize: 'Documents.Returns',
                            menu: {
                                title: 'Возвраты',
                            }
                        }
                    }
                ]
            },
            {
                path: 'administration',
                component: Admin,
                data: {
                    authorize: 'Administration',
                    menu: {
                        title: 'Администрирование',
                        icon: 'ion-settings',
                        selected: false,
                        expanded: false,
                        order: 10001,
                    }
                },
                children: [
                    {
                        path: 'users',
                        component: Users,
                        data: {
                            authorize: 'Administration.UserManagement',
                            menu: {
                                title: 'Пользователи',
                            }
                        }
                    }
                ]
            },
        ]
    }
];
