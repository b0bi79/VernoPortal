@model ChangePasswordViewModel

@{
    ViewBag.Title = "Изменение пароля";
    Layout = null;
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="windows-1251" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="refresh" content="300" />
    @Styles.Render("~/Content/css")
    <title>@ViewBag.Title</title>
</head>
<body>

    <section class="container body-content">
        <div class="login-container modal-content">
            <div class="modal-title">
                <h3>Измените свой пароль</h3>
            </div>
            @using (Html.BeginForm(Html.BeginForm("ChangePassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl },
                                                  FormMethod.Post, new { @class = "modal-body" })))
            {
                <div class="form-horizontal">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="input-group form-group">
                        <span class="input-group-addon glyphicon glyphicon-lock"></span>
                        @Html.PasswordFor(m => m.OldPassword, new { placeholder = "Старый пароль", @class = "form-control" })
                    </div>
                    <div class="input-group form-group">
                        <span class="input-group-addon glyphicon glyphicon-lock"></span>
                        @Html.PasswordFor(m => m.NewPassword, new { placeholder = "Новый пароль", @class = "form-control" })
                    </div>
                    <div class="input-group form-group">
                        <span class="input-group-addon glyphicon glyphicon-lock"></span>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Подтверждение пароля", @class = "form-control" })
                    </div>
                </div>
                <div class="form-group modal-footer">
                    <button type="submit" class="btn btn-default">Изменить</button>
                </div>
            }
        </div>
        <br />
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Верный</p>
        </footer>
    </section>

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
