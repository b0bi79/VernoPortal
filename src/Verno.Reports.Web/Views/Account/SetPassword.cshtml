@model Identity.Sql2.Models.SetPasswordViewModel

<p class="text-info">
    У Вас не задан пароль для входа на VernoPortal. Что бы продолжить 
    работу с сайтом необходимо задать пароль.
</p>

<div class="auth-main">
    <div class="auth-block">
        <form asp-controller="Account" asp-action="SetPassword" method="post" class="form-horizontal">
            <h4>Создание пароля</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewPassword" class="col-sm-2 control-label"></label>
                <div class="col-md-10">
                    <input type="password" class="form-control" asp-for="NewPassword">
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="col-sm-2 control-label"></label>
                <div class="col-md-10">
                    <input type="password" class="form-control" asp-for="ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button id="SubmitButton" type="submit" class="btn btn-default btn-auth">Задать пароль</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section styles{
    <link rel="stylesheet" href="~/login.css" />
}
@section scripts {
    <script src="~/assets/scripts/Login.js"></script>
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
